<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="hanriver.dao.NoticeDao">
  <resultMap type="Notice" id="NoticeMap">
    <id column="nno" property="no"/>
    <result column="titl" property="title"/>
    <result column="cont" property="contents"/>
    <result column="cdt" property="date"/>
  </resultMap>
  
  
  <select id="selectList" resultMap="NoticeMap">
    select nno, titl, cont, cdt from han_notice
    <if test="startIndex != null and pageSize != null">
        limit #{startIndex}, #{pageSize}
    </if>
  </select>
  
  <select id="selectOne" resultMap="NoticeMap" parameterType="string">
    select nno, titl, cont, cdt from han_notice where nno=#{value}
  </select>
  
  <insert id="insert" parameterType="Notice">
    insert into han_notice(titl,cont,cdt) values(#{title},#{contents},now())
  </insert>
  
  <update id="update" parameterType="Notice">
    update han_notice set titl=#{title}, cont=#{contents}, cdt=now() where nno=#{no}
  </update>
  
  <delete id="delete" parameterType="string">
    delete from han_notice where nno=#{value}
  </delete>
  
</mapper>
